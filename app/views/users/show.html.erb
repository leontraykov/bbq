<div class="text-center">
  <h1><%= @user.name %></h1>
  <h2><%= @user.email %></h2>
</div>

<div class="text-center">
  <%= image_tag user_avatar(@user) %>
</div>

<% if @user == current_user %>
  <div class="text-center">
    <p class="btn btn-default buffer-top">
    <%= link_to "Редактировать профиль", edit_user_path(@user),
      class: 'bg-warning btn btn-default' %>
    </p>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3 class="">Organized events</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top">User did not organize any event yet</p>
    <% end%>
  </div>
</div>
